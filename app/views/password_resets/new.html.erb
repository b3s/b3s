<% content_for(:body_class, "login") %>
<% content_for(:page_title, "Password Reset") %>

<h2 class="section">
  <%= link_to "Login", new_session_path %> &raquo;
  <%= link_to "Password Reset", new_password_reset_path %>
</h2>

<div id="login">
  <%= form_tag(password_reset_path, class: "form") do %>
    <fieldset>
      <label>Please enter your email address</label>
      <%= text_field_tag "email", "", class: :text %>
    </fieldset>
    <fieldset>
      <button type="submit">
        Send
      </button>
      or
      <%= link_to "Return to login screen", new_session_path %>
    </fieldset>
  <% end %>
</div>
