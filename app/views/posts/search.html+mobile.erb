<% @page_title = "Posts: \"#{@search_query}\"" %>

<% if @posts %>
  <%= render(partial: "posts/posts",
             locals: {
               posts: @posts,
               title: true,
               pagination_params: { q: @search_query } }) %>
<% else %>
  <div class="page_content">
    <p>
      No posts were found.
    </p>
  </div>
<% end %>
