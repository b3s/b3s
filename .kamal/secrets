KAMAL_REGISTRY_PASSWORD=$GITHUB_TOKEN
SECRETS=$(kamal secrets fetch --adapter 1password --account my.1password.com --from b3s/b3s S3_ACCESS_KEY_ID S3_SECRET_ACCESS_KEY DATABASE_URL POSTGRES_PASSWORD RAILS_MASTER_KEY OEMBED_FACEBOOK_TOKEN)
S3_ACCESS_KEY_ID=$(kamal secrets extract S3_ACCESS_KEY_ID $SECRETS)
S3_SECRET_ACCESS_KEY=$(kamal secrets extract S3_SECRET_ACCESS_KEY $SECRETS)
DATABASE_URL=$(kamal secrets extract DATABASE_URL $SECRETS)
POSTGRES_PASSWORD=$(kamal secrets extract POSTGRES_PASSWORD $SECRETS)
RAILS_MASTER_KEY=$(kamal secrets extract RAILS_MASTER_KEY $SECRETS)
OEMBED_FACEBOOK_TOKEN=$(kamal secrets extract OEMBED_FACEBOOK_TOKEN $SECRETS)
